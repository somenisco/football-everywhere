<% layout('layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">New Stadium</h1>
  <div class="col-6 offset-3">
    <form action="/stadiums/<%= stadium._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="stadium[title]"
          value="<%= stadium.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="stadium[location]"
          value="<%= stadium.location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="stadium[image]"
          value="<%= stadium.image %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="capacity">Capacity</label>
        <input
          class="form-control"
          type="text"
          id="capacity"
          name="stadium[capacity]"
          value="<%= stadium.capacity %>"
        />
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">Description</span>
        <textarea
          class="form-control"
          aria-label="With textarea"
          id="description"
          name="stadium[description]"
          value="<%= stadium.capacity %>"
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Update Stadium</button>
      </div>
    </form>
    <div>
      <a href="/stadiums/<%= stadium._id %>">back to Stadium</a>
    </div>
  </div>
</div>
