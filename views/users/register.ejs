<% layout('layouts/boilerplate') -%>
<div class="container d-flex flex-column justify-content-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1572598973655-4a1b9e63921d?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxfDB8MXxhbGx8fHx8fHx8fHwxNjE2MDgyOTU2&ixlib=rb-1.2.1&q=80&w=1080&utm_source=unsplash_source&utm_medium=referral&utm_campaign=api-credit"
          class="card-img-top"
          alt=""
        />
        <div class="card-body">
          <h5 class="card-title" style="text-align: center;">Create Your Account</h5>
          <form
            action="/register"
            method="POST"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <!-- <label class="form-label" for="username">UserName</label> -->
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                placeholder="UserName"
                autofocus
                required
              />
              <div class="invalid-feedback">UserName cannot be blank!!</div>
            </div>

            <div class="mb-3">
              <!-- <label class="form-label" for="email">Email ID</label> -->
              <input
                class="form-control"
                type="text"
                id="email"
                name="email"
                placeholder="Email ID"
                required
              />
              <div class="invalid-feedback">Email ID cannot be blank!!</div>
            </div>

            <div class="mb-3">
              <!-- <label class="form-label" for="password">Password</label> -->
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                placeholder="Password"
                required
              />
              <div class="invalid-feedback">Password is required!!</div>
            </div>
            <div class="mb-3 d-grid">
              <button class="btn btn-success">Create New Account</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
